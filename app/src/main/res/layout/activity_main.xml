<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewtitle"
        android:layout_centerHorizontal="true"
        android:textColor="#f20"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dang Nhap He Thong"
         />
    <EditText
        android:hint="Nhap vao tai khoan"
        android:id="@+id/edtTaiKhoan"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textviewtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textPassword"
        android:hint="Nhap vao mat khau"
        android:id="@+id/editMatKhau"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/edtTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Dang Ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMatKhau"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/btnDangKy"/>

    <Button
        android:text="Dang Nhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_below="@id/editMatKhau"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:id="@+id/btnDangNhap"/>

</RelativeLayout>